<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <TextView
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/fragmentfriend_textview_friendlist"
        android:text="친구 목록"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_below="@id/fragmentfriend_textview_friendlist"
        android:id="@+id/fragmentfriend_listview_friendlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </ListView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fragmentfriend_floatingactionbutton_addfriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        app:srcCompat="@android:drawable/ic_menu_add" />

</RelativeLayout>